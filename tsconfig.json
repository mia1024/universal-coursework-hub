{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "module": "esnext",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "src",
    "baseUrl": "src",
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "experimentalDecorators": true
  },
  "include": ["src/*"]
}
